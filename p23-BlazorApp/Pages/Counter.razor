@page "/counter"

<PageTitle>Contador</PageTitle>

<h1>Contador</h1>

<p role="status">Cuenta actual: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Picale aqui</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount {get; set;} = 1;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
}
